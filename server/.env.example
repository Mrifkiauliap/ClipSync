# App Configuration
APP_NAME="Clipboard Sync API"
VERSION=1.0.0

# Server Configuration
PORT=3002
NODE_ENV=development

# JWT Configuration
JWT_SECRET=YourJWTSecret
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=YourRefreshTokenSecret
REFRESH_TOKEN_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=YourSessionSecret

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH=./uploads

# Socket.IO Configuration
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Optional: Cloud Storage (if using AWS S3, Google Cloud Storage, etc)
# CLOUD_STORAGE_TYPE=local
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=
# AWS_REGION=

# Optional: Redis (for session store in production)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Security
BCRYPT_ROUNDS=10
# MAX_LOGIN_ATTEMPTS=5
# ACCOUNT_LOCK_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 Minutes
RATE_LIMIT_MAX_REQUESTS=100 # 100 Requests
